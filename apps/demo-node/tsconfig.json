{
    "include": [
        "./src/**/*.ts",
        "./src/**/*.mts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "outDir": "./dist",
        "sourceRoot": "./src",
        "rootDir": "./src",
        "inlineSourceMap": true,
        "target": "ES2022",
        "useDefineForClassFields": true,
        "lib": ["ES2023", "DOM", "DOM.Iterable"],

        "composite": true,
        "skipLibCheck": true,
        "module": "NodeNext",
        "strict": true,

        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",

        "esModuleInterop": true,

        "noFallthroughCasesInSwitch": true
    }
}
